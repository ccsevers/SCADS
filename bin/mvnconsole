#!/bin/bash

CLASSPATH="target/classes:/Users/marmbrus/local/scala-2.8.0.final/lib/avro-1.3.3.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/jackson-core-asl-1.4.2.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/jackson-mapper-asl-1.4.2.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/jline.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/scala-compiler.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/scala-dbc.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/scala-library.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/scala-swing.jar:/Users/marmbrus/local/scala-2.8.0.final/lib/scalap.jar:/Users/marmbrus/local/jrebel.jar:"`cat classpath`

if [ -f setup.scala ]
then
  exec java -Xmx6G -cp "$CLASSPATH" -noverify -javaagent:/Users/marmbrus/local/jrebel.jar scala.tools.nsc.MainGenericRunner -cp "$CLASSPATH" -i setup.scala 
else
  exec java -Xmx6G -cp $CLASSPATH -noverify -javaagent:/Users/marmbrus/local/jrebel.jar scala.tools.nsc.MainGenericRunner -cp $CLASSPATH
fi

