<h2>Interview Summary</h2>

<h3>Candidate Profile</h3>
<ul>
  <li>Name: <%= @candidate.name %></li>
  <li>Email: <%= @candidate.email %></li>
  <li>School: <%= @candidate.school %></li>
  <li>Research Area: <%= @candidate.research_area %></li>
  <li>GPA: <%= @candidate.gpa %></li>
</ul>

<h3>Interview Details</h3>
<ul>
  <li>Status: <%= @interview.status %></li>
  <li>Requested: <%= Time.at(@interview.created_at) %></li>
  <li>Scheduled: 
    <%- if @interview.interviewed_at == 0 -%>
      <%= link_to "Schedule Now", edit_candidate_interview_path(@candidate, @interview) %>
    <%- else -%>
      <%= Time.at(@interview.interviewed_at) %>
    <%- end -%>
  </li>
  <li>Interviewer: <%= @interview.interviewer %></li>
  <li>Score: <%= @interview.score %></li>
  <li>Comments: <%= simple_format(@interview.comments) %></li>
</ul>

<% if @interview.status == "INTERVIEWED" %>
<div class="offer-buttons">
<% form_for @interview, :url => decide_candidate_interview_path(@candidate, @interview), :html => { :method => :put } do |form| %>
<%= form.hidden_field :decision, :value => "OFFER" %>
<%= form.submit "Offer" %>
<% end %>

<% form_for @interview, :url => decide_candidate_interview_path(@candidate, @interview), :html => { :method => :put } do |form| %>
<%= form.hidden_field :decision, :value => "REJECT" %>
<%= form.submit "Reject" %>
<% end %>
</div>
<% end %>