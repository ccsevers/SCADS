<h2>Interviewing Candidate: <%=h @candidate.name %></h2>

<h3>Candidate Profile</h3>
<ul>
  <li>Name: <%= @candidate.name %></li>
  <li>Email: <%= @candidate.email %></li>
  <li>School: <%= @candidate.school %></li>
  <li>Research Area: <%= @candidate.research_area %></li>
  <li>GPA: <%= @candidate.gpa %></li>
</ul>

<% semantic_form_for [@candidate, @interview] do |form| %>
  <% form.inputs do %>
    <%= form.input :interviewer %>
    <%= form.input :comments, :as => :text %>
    <%= form.input :score, :collection => [1,2,3,4,5], :include_blank => false %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>