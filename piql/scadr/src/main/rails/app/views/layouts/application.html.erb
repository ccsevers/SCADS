<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html
    PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>SCADR-Rails</title>
    <%= stylesheet_link_tag "base", :media => "screen, print" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <link href="http://fonts.googleapis.com/css?family=Lobster|Nobile" rel="stylesheet" type="text/css">

  </head>
  <body>
  <div id="wrapper">
    <div id="header">
      <ul>
      <% if current_user_session -%>
        <li>Hello, <span class="user"><%= current_user.username %></span> (<%= link_to "Log Out", logout_path %>)</li>
      <% else -%>
        <li><%= link_to "Log In", login_path %></li>
      <% end -%>
      </ul>
      <h1><%= link_to "SCADR", root_path %></h1>
    </div>
    <div id="flash">
      <% if flash[:notice] -%>
        <span class="notice"><%= flash[:notice] %></span>
      <% end -%>
      <% if flash[:error] -%>
        <span class="error"><%= flash[:error] %></span>
      <% end -%>
    </div>
    <div id="body">
      <%= yield %>
    </div>
  </div>
  <div id="footer">
    <div id="footer-content">
      Created by Awesome
    </div>
  </div>
  </body>
</html>